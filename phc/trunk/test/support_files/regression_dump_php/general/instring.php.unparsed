<?php
   class X
   {
      public $y;

      public function X()
      {
         $this->y = 123;
      }
   }

   define("sc", 0);
   $b = 1;
   $arr[0] = "foo";
   $arr["sc"] = "boo";
   $str = "bar";
   $x = new X();
   /*
	 * Simple syntax
	 *
	 * This might actually turn out to be more difficult to parse than
	 * "complex" syntax (which is standard syntax enclosed in {..}, where
	 * the first "{" must be followed by a "$".
	 *
	 * Possible variables:
	 *   "$a"     a an ident
	 *   "${a}"   a an ident
	 *   "$a->b"  a, b an ident
	 *   "$a[b]"  b an integer
	 *   "$a[b]"  b an ident (interpreted as a string)
	 */
   echo "a " . $bc . "\n";
   echo "a " . $b . "c\n";
   echo "a " . $arr[0] . " c\n";
   // "a " . $b["x"] . " c\n"; prints "boo"
   echo "a " . $arr["sc"] . " c\n";
   // Curlies are not interpreted
   echo "a " . $str . "{0} c\n";
   // (Again)
   echo "a " . $arr[0] . "{1} c\n";
   echo "a " . $x->y . " c\n";
   echo "a " . $bc . " d";
   echo "a " . $b . "c d";
   echo "a " . $b[0] . " d";
   echo "a " . $b["c"] . " d";
   echo "a " . $b->c . " d";
   /* 
	 * Complex syntax 
	 */
   echo "a " . $b . " c\n";
   echo "a " . $arr[0] . " c\n";
   // Note: prints "foo"		
   echo "a " . $arr[sc] . " c\n";
   // Curlies _are_ interpreted
   echo "a " . $str{0} . " c\n";
   echo "a " . $arr[0]{1} . " c\n";
   // while this prints "boo" 
   echo "a " . $arr["sc"] . " c\n";
   echo "a " . $x->y . " c\n";
   echo "a " . $b . " c";
   echo "a " . $arr[0] . " c";
   echo "a " . $arr[sc] . " c";
   echo "a " . $arr{0} . " c";
   echo "a " . $arr[0]{1} . " c";
   echo "a " . $arr["sc"] . " c";
   echo "a " . $x->y . " c";
   /*
	 * PHP will bark on this, but we don't
	 */
   // We don't generate an error
   echo "a " . $b . "[ 0 ] c\n";
   echo "a " . $b + $c . " d\n";
   echo "a " . $b . $c . " d\n";
   echo "a " . $b . "blah" . " d\n";
   echo "a " . $b . "c " . $d . " e" . " d\n";
   /*
	 * Nested complex syntax
	 */
   echo "a " . $b . "c " . $b . " e" . " d\n";
   echo "a " . $x . "foo " . $x . " bar" . " b";
?>
